doctype html
html
  head
    title ToDo App - All Tasks
    style.
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        background: linear-gradient(135deg, #667eea, #764ba2);
        min-height: 100vh;
        display: flex;
        flex-direction: column;
      }

      header {
        background: rgba(0, 0, 0, 0.25);
        padding: 15px 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        color: #fff;
      }

      header .logo {
        font-size: 22px;
        font-weight: 700;
      }

      header nav ul {
        list-style: none;
        display: flex;
        gap: 20px;
      }

      header nav ul li a {
        color: #fff;
        text-decoration: none;
        font-weight: 500;
        transition: color 0.3s;
      }

      header nav ul li a:hover {
        color: #ffd369;
      }

      h1.page-title {
        text-align: center;
        margin: 25px 0;
        color: #fff;
        font-size: 2rem;
        letter-spacing: 1px;
      }

      main.task-container {
        flex: 1;
        padding: 30px;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 25px;
      }

      .task-card {
        background: #fff;
        padding: 20px;
        border-radius: 14px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
        transition: transform 0.2s, box-shadow 0.3s;
        animation: fadeIn 0.6s ease-in-out;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
      }

      .task-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 12px 25px rgba(0, 0, 0, 0.25);
      }

      .task-card h2 {
        margin-bottom: 10px;
        font-size: 18px;
        color: #007bff;
      }

      .task-card p {
        margin: 5px 0;
        font-size: 14px;
        color: #333;
      }

      .task-status {
        margin: 8px 0;
        font-size: 14px;
      }

      .task-status select {
        padding: 6px 10px;
        border-radius: 6px;
        border: 1px solid #ccc;
        font-size: 14px;
        outline: none;
      }

      .task-actions {
        margin-top: 15px;
        display: flex;
        justify-content: space-between;
      }

      .btn {
        text-decoration: none;
        padding: 8px 14px;
        border-radius: 6px;
        font-size: 14px;
        font-weight: 600;
        transition: background 0.3s, transform 0.2s;
      }

      .btn-edit {
        background: #667eea;
        color: white;
      }

      .btn-edit:hover {
        background: #5a6fdc;
        transform: translateY(-2px);
      }

      .btn-delete {
        background: #ff4d4d;
        color: white;
      }

      .btn-delete:hover {
        background: #e63e3e;
        transform: translateY(-2px);
      }

      .no-task {
        text-align: center;
        margin: 40px 0;
        color: white;
        font-size: 18px;
        font-weight: 500;
      }

      footer {
        text-align: center;
        padding: 15px;
        color: #fff;
        background: rgba(0, 0, 0, 0.2);
        font-size: 14px;
      }

      footer a {
        color: #ffd369;
        text-decoration: none;
        margin: 0 8px;
      }

      footer a:hover {
        text-decoration: underline;
      }

      @keyframes fadeIn {
        from {
          opacity: 0;
          transform: translateY(10px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }
  body
    header
      div.logo ToDo App üìù
      nav
        ul
          li: a(href="/") Create Task
          li: a(href="/alltask") Show Task
          li: a(href="/logout") Logout

    h1.page-title All Tasks

    if tasks.length
      main.task-container
        each task in tasks
          .task-card
            h2 Task ##{task.id}
            p 
              strong Name: 
              | #{task.task}
            p 
              strong Priority: 
              | #{task.priority}
            p 
              strong Deadline: 
              | #{task.deadline}

            // üëá Added Status dropdown here
            .task-status
              strong Status: 
              select(name="status")
                option(value="Started" selected=task.status==='Started') Started
                option(value="In Progress" selected=task.status==='In Progress') In Progress
                option(value="Completed" selected=task.status==='Completed') Completed

            .task-actions
              a.btn.btn-edit(href=`/edit/${task.id}`) ‚úèÔ∏è Edit
              a.btn.btn-delete(href=`/delete/${task.id}`) üóëÔ∏è Delete
              
    else
      p.no-task No tasks found. Add your first task ‚úÖ

