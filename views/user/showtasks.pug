doctype html
html
  head
    title ToDo App - All Tasks
    style.
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        background: linear-gradient(135deg, #667eea, #764ba2);
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
      }

      header {
        background: rgba(0, 0, 0, 0.25);
        padding: 15px 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        color: #fff;
      }

      header .logo {
        font-size: 20px;
        font-weight: 700;
      }

      header nav ul {
        list-style: none;
        display: flex;
        gap: 20px;
      }

      header nav ul li a {
        color: #fff;
        text-decoration: none;
        font-weight: 500;
        transition: color 0.3s;
      }

      header nav ul li a:hover {
        color: #ffd369;
      }

      main.task-container {
        flex: 1;
        padding: 30px;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
      }

      .task-card {
        background: #fff;
        padding: 20px;
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
        transition: transform 0.2s, box-shadow 0.3s;
        animation: fadeIn 0.6s ease-in-out;
      }

      .task-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 12px 25px rgba(0, 0, 0, 0.2);
      }

      .task-card h2 {
        margin-bottom: 10px;
        font-size: 18px;
        color: #007bff;
      }

      .task-card p {
        margin: 5px 0;
        font-size: 14px;
        color: #333;
      }

      footer {
        text-align: center;
        padding: 15px;
        color: #fff;
        background: rgba(0, 0, 0, 0.2);
        font-size: 14px;
      }

      footer a {
        color: #ffd369;
        text-decoration: none;
        margin: 0 8px;
      }

      footer a:hover {
        text-decoration: underline;
      }
      @keyframes fadeIn {
        from {
          opacity: 0;
          transform: translateY(10px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }
  body
    header
      div.logo ToDo App üìù
      nav
        ul
          li: a(href="/") Create Task
          li: a(href="/alltask") Show Task
          li: a(href="/logout") Logout

    h1(style="text-align:center; margin:20px; color:white;") All Tasks

    if tasks.length
      main.task-container
        each task in tasks
          .task-card
            h2 Task #{task.id}
            p 
              strong Name: 
              | #{task.task}
            p 
              strong Priority: 
              | #{task.priority}
            p 
              strong Deadline: 
              | #{task.deadline}

            a(href=`/delete/${task.id}`) Delete
            a(href=`/edit/${task.id}` style="margin-left:14px;") Edit
    else
      p(style="text-align:center; margin:20px; color:white; font-size:18px;") No tasks found.

