doctype html
html
  head
    title ToDo App - All Tasks
    style.
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        background: linear-gradient(135deg, #667eea, #764ba2);
        min-height: 100vh;
        display: flex;
        flex-direction: column;
      }

      header {
        background: rgba(0, 0, 0, 0.25);
        padding: 15px 10px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        color: #fff;
      }

      header .logo {
        font-size: 22px;
        font-weight: 700;
      }

      header nav ul {
        list-style: none;
        display: flex;
        gap: 20px;
      }

      header nav ul li a {
        color: #fff;
        text-decoration: none;
        font-weight: 500;
        transition: color 0.3s;
      }

      header nav ul li a:hover {
        color: #ffd369;
      }

      h1.page-title {
        text-align: center;
        margin: 25px 0;
        color: #fff;
        font-size: 2rem;
        letter-spacing: 1px;
      }

      .summary {
        display: flex;
        justify-content: center;
        gap: 30px;
        margin-bottom: 20px;
      }

      .summary div {
        background: rgba(255, 255, 255, 0.2);
        padding: 15px 25px;
        border-radius: 12px;
        color: #fff;
        font-size: 16px;
        font-weight: 600;
        box-shadow: 0 5px 15px rgba(0,0,0,0.2);
      }

      main.task-container {
        flex: 1;
        padding: 30px;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 25px;
      }

      .task-card {
        padding: 20px;
        border-radius: 14px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
        transition: transform 0.2s, box-shadow 0.3s;
        animation: fadeIn 0.6s ease-in-out;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
      }

      .task-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 12px 25px rgba(0, 0, 0, 0.25);
      }

      .priority-high {
        background: #ff4d4d;
        color: white;
      }

      .priority-medium {
        background: #f9a825;
        color: white;
      }

      .priority-low {
        background: #4caf50;
        color: white;
      }

      .task-card h2 {
        margin-bottom: 10px;
        font-size: 18px;
      }

      .task-card p {
        margin: 5px 0;
        font-size: 14px;
      }

      .task-actions {
        margin-top: 15px;
        display: flex;
        justify-content: space-between;
      }

      .btn {
        text-decoration: none;
        padding: 8px 14px;
        border-radius: 6px;
        font-size: 14px;
        font-weight: 600;
        transition: background 0.3s, transform 0.2s;
      }

      .btn-edit {
        background: #667eea;
        color: white;
      }

      .btn-edit:hover {
        background: #5a6fdc;
        transform: translateY(-2px);
      }

      .btn-delete {
        background: #d32f2f;
        color: white;
      }

      .btn-delete:hover {
        background: #b71c1c;
        transform: translateY(-2px);
      }

      .no-task {
        text-align: center;
        margin: 40px 0;
        color: white;
        font-size: 18px;
        font-weight: 500;
      }

      footer {
        text-align: center;
        padding: 15px;
        color: #fff;
        background: rgba(0, 0, 0, 0.2);
        font-size: 14px;
      }

      @keyframes fadeIn {
        from { opacity: 0; transform: translateY(10px); }
        to { opacity: 1; transform: translateY(0); }
      }
  body
    header
      div.logo ToDo App üìù
      nav
        ul
          li: a(href="/") Create Task
          li: a(href="/alltask") Show Task
          li: a(href="/logout") Logout

    h1.page-title All Tasks

    // ‚úÖ Summary section
    .summary
      div High Priority Tasks: #{high}
      div Medium Priority Tasks: #{medium}
      div Low Priority Tasks: #{low}

    if tasks.length
      main.task-container
        each task in tasks
          .task-card(class=`priority-${task.priority}`)
            h2 Task #{task.id}
            p 
              strong Name: 
              | #{task.task}
            p 
              strong Priority: 
              | #{task.priority}
            p 
              strong Deadline: 
              | #{task.deadline.toDateString ? task.deadline.toDateString() : task.deadline}

            .task-actions
              a.btn.btn-edit(href=`/edit/${task.id}`) ‚úèÔ∏è Edit
              a.btn.btn-delete(href=`/delete/${task.id}`) üóëÔ∏è Delete
    else
      p.no-task No tasks found. Add your first task ‚úÖ

    footer
      p ¬© 2025 ToDo App. All rights reserved.
