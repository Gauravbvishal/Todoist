      section.todo-form
        h2 Add a New Task
        form(action="/add-todo" method="POST")
          // Task input
          div.form-group
            label(for="task") Task
            input#task(type="text" name="task" placeholder="Enter your task" required)

          // Deadline input
          div.form-group
            label(for="deadline") Deadline
            input#deadline(type="date" name="deadline")

          // Priority dropdown
          div.form-group
            label(for="priority") Priority
            select#priority(name="priority" required)
              option(value="" disabled selected) -- Select Priority --
              option(value="high") High
              option(value="medium") Medium
              option(value="low") Low

          
